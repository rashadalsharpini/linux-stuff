#!/bin/bash

set -euo pipefail

readonly TESSDATA_PREFIX="/usr/share/tessdata"

notify() {
    local message="$*"
    echo "$message"
    notify-send "Maim OCR" "$message" &
}

take_screenshot() {
    if [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
        grim -g "$(slurp)" -t ppm - |
        convert ppm:- \
            -modulate 100,0 \
            -resize 400% \
            -alpha off \
            -bordercolor White \
            -border 10x10 \
            png:-
    else
        maim --select --hidecursor --format=png --quality=1 |
        convert png:- \
            -modulate 100,0 \
            -resize 400% \
            -alpha off \
            -bordercolor White \
            -border 10x10 \
            png:-
    fi
}

tesseract_recognize() {
    tesseract stdin stdout \
        --tessdata-dir "$TESSDATA_PREFIX" \
        -l eng \
        --psm 1 
}

run_ocr() {
    local result
    result=$(take_screenshot | tesseract_recognize)
    if [[ -n $result ]]; then
        if [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
            echo -n "$result" | wl-copy
        else
            echo -n "$result" | xclip -selection clipboard
        fi
        notify "OCR result copied to clipboard:\n$result"
    else
        notify "OCR failed. No text recognized."
        return 1
    fi
}

main() {
    run_ocr
}

main
