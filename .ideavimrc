nnoremap h h
nnoremap l l
vnoremap h h
vnoremap l l
inoremap <C-h> <Left>
inoremap <C-l> <Right>
inoremap <C-b> <Home>
inoremap <C-e> <End>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
set whichwrap-=h,l  " Prevent wrapping at line boundaries
nnoremap y "+y
vnoremap y "+y
nnoremap yy "+yy
nnoremap p "+p
